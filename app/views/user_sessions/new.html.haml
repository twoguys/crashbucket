= content_for :head do
	:css
		div#main_content {
			background-color:transparent;
		}
		div#form_container {
			background-color:white;
			margin-top:130px;
		}

#form_container
	%h2 Sign In

	= form_for @user, :as => :user_session, :url => user_sessions_path do |form|
		= form.label :email, "Email Address"
		%br/
		= form.text_field :email, :class => "text_input"
		%br/
		= form.label :password, "Password"
		%br/
		= form.password_field :password, :class => "text_input"
		%br/
		= form.check_box :remember_me
		= form.label :remember_me, 'Remember me on this computer'
		%br/
		= form.submit "Sign In", :class => "button_input"
		%br/
		= #link_to "I forgot my password", new_password_reset_path, :class => 'small right-side no-border'
	
	.clear

= javascript_tag("$('#user_session_email').focus();")