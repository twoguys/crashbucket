#form_container
	%h1 Sign In

	= form_for @user, :as => :user_session, :url => user_sessions_path do |form|
		%fieldset
		= form.label :email, "Email Address"
		= form.text_field :email
		%br/
		= form.label :password, "Password"
		= form.password_field :password
		= #link_to "I forgot my password", new_password_reset_path, :class => 'small right-side no-border'
		%br/
		= form.check_box :remember_me
		= form.label :remember_me, 'Remember me on this computer'
		%br/
		= form.submit "Sign In"

= javascript_tag("$('#user_session_email').focus();")