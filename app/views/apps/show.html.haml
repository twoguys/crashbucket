%h2{ :style => "margin-left:50px;display:inline;" }= @app.name
-#%h2= @app.api_key

%table
  %tr{ :id => "table_header" }
    %th{ :class => "first report_name" } exception name
    %th{ :class => "report_date" } last reported
    %th{ :class => "last report_count" } count
  - @app.reports.each do |report|
    %tr{ :class => "table_row" }
      %td= link_to report.exc_name, [@app, report]
      %td
        = time_ago_in_words report.created_at
        ago
      %td
        - count = report.count
        - if count == 1
          1 time
        - else
          = "#{count} times"

= link_to "Apps", apps_path