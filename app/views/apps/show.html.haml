%h2= @app.name
%h2= @app.api_key

%table
  %tr{ :id => "table_header" }
    %th{ :class => "first report_name" } exc_name
    %th{ :class => "report_date" } last reported
    %th{ :class => "last report_count" } count
  - @app.reports.each do |report|
    %tr{ :class => "table_row" }
      %td= report.exc_name
      %td= report.modified_at
      %td= report.count

= link_to "Apps", apps_path