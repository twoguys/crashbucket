!!!
%html
	%head
		%title Crash Report App
		= stylesheet_link_tag "application"
		= javascript_include_tag :defaults
		= csrf_meta_tag
		= yield :head
	%body
		#header_container
			#header_content
				%h1{ :id => "site_title" } site title
				- if current_user
					= link_to "You're signed in"
					= link_to "Sign out", signout_path
				- else
					= link_to "Sign in", signin_path
					= link_to "Sign up", new_user_path
		#main_container
			#main_content
				= yield